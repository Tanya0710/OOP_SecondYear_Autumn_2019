#include<iostream>
#include<math.h>
using namespace std;
int main(){ 
    double x1,y1,x2,y2,x3,y3,x4,y4,ab,bc,ca;
    x1=2; y1=0;
    x2=0; y2=5;
    x3=1; y3=0;
    cout<<"Введите координаты точки D: "; 
    cin>>x4>>y4; 
    ab=(x1-x2)*(y4-y2)-(x4-x2)*(y1-y2);
    bc=(x2-x3)*(y4-y3)-(x4-x3)*(y2-y3);
    ca=(x3-x1)*(y4-y1)-(x4-x1)*(y3-y1); 
    if(ab>0&&bc>0&&ca>0)  
    if(ab>0&&bc>0&&ca>0)  
    cout<<"0"; 
    if(ab<0||bc<0||ca<0) 
cout<<"1";
if(ab==0||bc==0||ca==0)
cout<<"2"; 
 
return 0;
    
}
